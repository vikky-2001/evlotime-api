{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "skipLibCheck":true,
    "paths": {
      "@domains": ["api/domains/index"],
      "@services": ["api/services/index"],
      "@configs": ["api/config/index"],
      "@controllers": ["api/controllers/index"],
      "@utils": ["api/utils/index"]
    },
  },
  "compileOnSave": true,
  //"exclude" : ["node_modules"],
  "include": [
    "src/**/*"
  ]
  
}
